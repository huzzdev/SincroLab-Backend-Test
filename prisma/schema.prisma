// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  admin
  therapist
}

enum TaskStatus {
  pending
  in_progress
  done
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Will be hashed
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id        String   @id @default(uuid())
  fullName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relation: One Patient has many Tasks
  tasks     Task[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus
  dueDate     DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relation: Belongs to a Patient
  patientId   String
  patient     Patient    @relation(fields: [patientId], references: [id], onDelete: Cascade)
}
